#include<stdio.h>
   int main(){
       
       int dia;
       
       printf("Digite um numero de 1 a 7: ");
       scanf("%d", &dia);
       
       switch(dia) //colocar entre parenteses a variavel qeu o programa vai usar
       {
           case 1:
           printf("Domingo");
           break;
           case 2:
           printf("Segunda");
           break;
           case 3:
           printf("Ter√ßa");
           break;
           case 4:
           printf("Quarta");
           break;
           case 5:
           printf("Quinta");
           break;
           case 6:
           printf("Sexta");
           break;
           case 7:
           printf("Sabado");
           break;
       }
       return 0;
   }
