#include <stdio.h>
int main (){
int dia;
for(;;){
printf("\ndigite um número de 1 a 7: \n");
scanf("%d", &dia);

if (dia<=7){
    
    switch(dia){
        case 1:
        printf("domingo");
        break;
        case 2:
        printf("segunda");
        break;
        case 3:
        printf("terça");
        break;
        case 4:
        printf("quarta");
        break;
        case 5:
        printf("quinta");
        break;
        case 6:
        printf("sexta");
        break;
        case 7:
        printf("sábado");
        break;
        
    }
    }else{
        printf("valor incorreto\n");
    }
}
return 0;
}
      
