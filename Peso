#include<stdio.h>
int main(){
    int peso;
    int a, b, c;
    printf("digite seu genero \n 1 - Feminino: \n 2 - Masculino: \n ");
    scanf("%d", &peso);
    switch(peso){
    case 1:
    printf("Digite seu peso: ");
    scanf("%d", &a);
    c=( a - 100) * - 0.9;
    printf("Seu peso ideal é:%d", c);
    break;
    case 2:
    printf("Digite seu peso: ");
    scanf("%d", &b);
    c=( b - 100) * - 0.85;
    printf(" Seu peso ideal é:%d", c);
    break;
    }
   return 0;
}
